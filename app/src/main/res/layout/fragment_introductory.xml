<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="match_parent"
    tools:context=".IntroductoryFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sgc_logo_cut"
        android:id="@+id/logoInIntroductoryFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27"/>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Guidance Cell"
        app:layout_constraintTop_toBottomOf="@id/logoInIntroductoryFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.01"
        android:id="@+id/headingInIntroductoryFragment"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:textSize="21sp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headingInIntroductoryFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/chooseInstitutionButtonInIntroductoryFragment"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.7"
        android:text="Choose Your Institution"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="25dp"
        android:elevation="7dp"
        app:layout_constraintVertical_bias="0.2"
        android:letterSpacing="0.01"
        android:fontFamily="@font/inter_semibold"
        android:backgroundTint="@color/cream"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Continue"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chooseInstitutionButtonInIntroductoryFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/continueButtonInIntroductoryFragment"
        app:layout_constraintVertical_bias="0.05"
        android:textAllCaps="false"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.45"
        android:elevation="7dp"
        android:textSize="17sp"
        android:backgroundTint="@color/navy_blue"
        app:cornerRadius="25dp"/>




    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Register Institution"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.08"
        app:cornerRadius="20dp"
        android:elevation="7dp"
        android:backgroundTint="@color/lavender"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toBottomOf="@id/chooseInstitutionButtonInIntroductoryFragment"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/registerButtonInIntroductoryFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>